<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.dao.MethodDao">

    <resultMap type="com.paper.ssm.entity.Method" id="MethodMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MethodMap">
        select id,
               title,
               type,
               remark
        from paper.method
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MethodMap">
        select id,
               title,
               type,
               remark
        from paper.method limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MethodMap">
        select
        id, title, type, remark
        from paper.method
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into paper.method(title, type, remark)
        values (#{title}, #{type}, #{remark})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into paper.method(title, type, remark)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.type}, #{entity.remark})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into paper.method(title, type, remark)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.type}, #{entity.remark})
        </foreach>
        on duplicate key update
        title = values(title) , type = values(type) , remark = values(remark)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update paper.method
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from paper.method
        where id = #{id}
    </delete>

</mapper>