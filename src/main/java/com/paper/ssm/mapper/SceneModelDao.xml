<!--                and parent_id = #{parentId}-->
<!--            </if>-->
<!--            <if test="operator != null and operator != ''">-->
<!--                and operator = #{operator}-->
<!--            </if>-->
<!--            <if test="dataSource != null and dataSource != ''">-->
<!--                and data_source = #{dataSource}-->
<!--            </if>-->
<!--            <if test="description != null and description != ''">-->
<!--                and description = #{description}-->
<!--            </if>-->
<!--        </where>-->
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into display.scene_model(title, parent_id, operator, data_source, description)
        values (#{title}, #{parentId}, #{operator}, #{dataSource}, #{description})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into display.scene_model(title, parent_id, operator, data_source, description)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.parentId}, #{entity.operator}, #{entity.dataSource}, #{entity.description})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into display.scene_model(title, parent_id, operator, data_source, description)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.parentId}, #{entity.operator}, #{entity.dataSource}, #{entity.description})
        </foreach>
        on duplicate key update
        title = values(title) , parent_id = values(parent_id) , operator = values(operator) , data_source =
        values(data_source) , description = values(description)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update display.scene_model
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="operator != null and operator != ''">
                operator = #{operator},
            </if>
            <if test="dataSource != null and dataSource != ''">
                data_source = #{dataSource},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from display.scene_model
        where id = #{id}
    </delete>

</mapper>