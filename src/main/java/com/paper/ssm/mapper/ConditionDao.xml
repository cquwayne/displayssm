<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.dao.ConditionDao">

    <resultMap type="com.paper.ssm.entity.Condition" id="ConditionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ConditionMap">
        select id,
               title
        from paper.condition
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ConditionMap">
        select id,
               title
        from paper.condition limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ConditionMap">
        select
        id, title
        from paper.condition
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into paper.condition(title)
        values (#{title})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into paper.condition(title)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into paper.condition(title)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title})
        </foreach>
        on duplicate key update
        title = values(title)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update paper.condition
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from paper.condition
        where id = #{id}
    </delete>

</mapper>